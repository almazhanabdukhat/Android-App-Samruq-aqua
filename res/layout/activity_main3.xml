<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:background="#E0ECFF"
    android:orientation="vertical"
    tools:context=".Main3Activity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="4. Расчет кассы"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextViewTitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:text="Введите дату:"
            android:textSize="14sp"></TextView>

        <EditText
            android:id="@+id/ageY"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextViewTitle6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="День
"
            android:textSize="14sp"></TextView>

        <EditText
            android:id="@+id/ageM"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextViewTitle7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Месяц"
            android:textSize="14sp"></TextView>

        <EditText
            android:id="@+id/ageMh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextViewTitle9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Год"
            android:textSize="14sp"></TextView>


    </LinearLayout>

    <EditText
        android:id="@+id/gmz1"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_gravity="center"
        android:hint="Введите кассу на ГМЗ 1"
        android:inputType="number"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/gmz2"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_gravity="center"
        android:hint="Введите кассу на ГМЗ 2"
        android:inputType="number"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dobavka"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_gravity="center"
        android:hint="Введите добавку в кассу"

        android:inputType="number"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pofaktu"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_gravity="center"
        android:hint="Введите кассу по факту"

        android:inputType="number"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/term"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_gravity="center"
        android:hint="Введите оплату через терминал"

        android:inputType="number"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_add"
        android:layout_width="99dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#EDC9C3"
        android:text="Расчитать"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewItogo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Итого в кассе: "
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtItogo"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text=" 0 тенге"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewRaznica"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Разница в кассе: "
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtRaznica"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text=" 0 тенге"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOst"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Остаток на предыдущий день: "
            android:textSize="16sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/txtOst"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text=" 0 тенге"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewKons"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Расходы на консигнации: "
            android:textSize="16sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/txtKonsi"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text=" 0 тенге"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewZak"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Расходы на закуп: "
            android:textSize="16sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/txtZak"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:text=" 0 тенге"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDr"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Другие Расходы: "
            android:textSize="16sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/txtDr"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text=" 0 тенге"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOsK"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:background="#EFE8BB"
            android:text="Остаток на кассе: "
            android:textColorHighlight="#EA9393"
            android:textSize="18sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/txtOsK"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:background="#EFE8BB"
            android:text=" 0 тенге"
            android:textSize="18sp"
            android:textStyle="bold|italic" />


    </LinearLayout>




    <Button
        android:id="@+id/btn_menu3"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#EDC9C3"
        android:text="Назад в меню"
        android:textSize="10sp" />


</LinearLayout>